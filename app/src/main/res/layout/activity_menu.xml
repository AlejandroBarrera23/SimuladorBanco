<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/textViewBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido, Usuario"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textViewNumeroCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número de cuenta: 000000"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonConsultaSaldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultar Saldo"/>

    <Button
        android:id="@+id/buttonDeposito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Realizar Depósito"/>

    <Button
        android:id="@+id/buttonRetiro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Realizar Retiro"/>

    <Button
        android:id="@+id/buttonTransferencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Realizar Transferencia"/>

    <Button
        android:id="@+id/buttonCerrarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesión"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@android:color/white"/>
</LinearLayout>
